<main class="md:flex gap-20">
    
    <section class="md:w-1/3 mb-20">
        <%= form_with(model: @artwork, local: true) do |form| %>

            <% if @artwork.errors.any? %>
                <div id="error_explanation" class="mb-5 font-light text-sm">
                    <h2 class="text-red-600 mb-3">Faced <%= pluralize(@artwork.errors.count, "error") %>:</h2>
                    <ul>
                    <% @artwork.errors.full_messages.each do |message| %>
                        <li class="text-rose-600 list-disc"><%= message %></li>
                    <% end %>
                    </ul>
                </div>
            <% end %>

            <div class="field w-full space-y-2 mb-4">
                <%= form.label :title %>
                <%= form.text_field :title, class: "w-full rounded-md" %>
            </div>
            <div class="field w-full space-y-2 mb-4">
                <%= form.label :description %>
                <%= form.text_area :description, class: "w-full rounded-md" %>
            </div>
            <div class="field w-full space-y-2 mb-4">
                <%= form.label :image %>
                <%= form.file_field :image, class: "w-full rounded-md" %>
            </div>
            <div class="actions pt-3">
                <%= form.submit "Create Post", class: "w-full py-2 px-4 bg-yellow-300 rounded-md cursor-pointer hover:bg-yellow-400 transition-all"%>
            </div>
        <% end %>
    </section>

    <section class="md:w-2/3 space-y-10">
        <% @artworks.each do |artwork|%>
            <div class="">
                <div class="flex items-center justify-between">
                    <div class="flex items-center gap-2">
                        <div class="w-8 h-8 bg-black rounded-full"></div>
                        <%= link_to artwork.user.name, user_path(artwork.user), class: "hover:underline" %>
                    </div>

                    <div class="flex items-center relative text-left dropdown">
                        <button class="inline-flex justify-center w-full p-1 text-sm font-medium  bg-white rounded-full hover:bg-gray-100 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:bg-gray-50 active:text-gray-800" type="button" aria-haspopup="true" aria-expanded="true" aria-controls="headlessui-menu-items-117">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-ellipsis-vertical"><circle cx="12" cy="12" r="1"/><circle cx="12" cy="5" r="1"/><circle cx="12" cy="19" r="1"/></svg>
                        </button>
                        <div class="opacity-0 invisible dropdown-menu py-2 transition-all duration-300 transform origin-top-right -translate-y-2 scale-95">
                            <div class="absolute right-0 w-56 mt-2 origin-top-right bg-white border border-gray-200 divide-y rounded-md shadow-lg outline-none" aria-labelledby="headlessui-menu-button-1" id="headlessui-menu-items-117" role="menu">
                                <%= link_to "View Details", artwork_path(artwork), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 whitespace-nowrap", role: "menuitem" %>
                                <%= link_to "Edit Artwork", edit_artwork_path(artwork), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 whitespace-nowrap", role: "menuitem" %>
                                <%= button_to "Delete", artwork, method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete this artwork?" } }, class: "text-start w-full block px-4 py-2 text-sm text-rose-600 hover:bg-gray-50 whitespace-nowrap  hover:bg-rose-600 hover:text-white", role: "menuitem" %>
                            </div>
                        </div>
                    </div>

                </div>
                
                <div class="mt-4 space-y-3">
                    <%= image_tag artwork.image.present? ? artwork.image : image_path('broken_image.jpg'), class: "w-full" %>
                    <div class="flex gap-2">
                        <%= button_to like_artwork_path(artwork), method: :post, class: "cursor-pointer flex-shrink-0 flex-grow-0 h-full flex items-center" do %>
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="relative lucide lucide-star transition-all <%= current_user.liked_artworks.include?(artwork) ? 'fill-yellow-300' : 'hover:stroke-yellow-300' %>">
                            <path d="M11.525 2.295a.53.53 0 0 1 .95 0l2.31 4.679a2.123 2.123 0 0 0 1.595 1.16l5.166.756a.53.53 0 0 1 .294.904l-3.736 3.638a2.123 2.123 0 0 0-.611 1.878l.882 5.14a.53.53 0 0 1-.771.56l-4.618-2.428a2.122 2.122 0 0 0-1.973 0L6.396 21.01a.53.53 0 0 1-.77-.56l.881-5.139a2.122 2.122 0 0 0-.611-1.879L2.16 9.795a.53.53 0 0 1 .294-.906l5.165-.755a2.122 2.122 0 0 0 1.597-1.16z"/>
                            </svg>
                        <% end %>
                        <% liked_users_count = artwork.likes.count %>
                        <% other_likes_count = liked_users_count - (current_user.liked_artworks.include?(artwork) ? 1 : 0) %>

                        <p class="flex-grow-0 flex-shrink-0 font-light text-sm">
                            <% if liked_users_count > 0 %>
                                <% if current_user.liked_artworks.include?(artwork) %>
                                    <%= "You" %>
                                    <% if other_likes_count > 0 %>
                                        <%= " and #{other_likes_count} others" %>
                                    <% end %>
                                    <%= " liked this artwork" %>
                                <% else %>
                                    <%= "#{liked_users_count} people liked this artwork" %>
                                <% end %>
                            <% else %>
                                <%= "Be the first to like this artwork" %>
                            <% end %>
                        </p>
                    </div>
                    <div>
                        <h6 class="font-semibold"><%= artwork.title %></h6>
                        <p class="font-light"><%= artwork.description %></p>
                    </div>
                    <%= render "comments", artwork: artwork %>
                </div>
            </div>
        <%end%>
    </section>
</main>

