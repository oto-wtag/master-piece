<div class="w-full flex">
  <div class="">
    <%= link_to "Edit Profile", edit_user_path(current_user), class: "hover:underline", role: "menuitem" %>
    <p class="underline">Create Artist Profile</p>
  </div>

  <div class=" flex-1 flex flex-col items-center justify-center">
    <div class=" bg-background shadow-md px-3 py-6 sm:p-8 border sm:max-w-sm w-full rounded-xl">

      <h2 class="text-2xl font-semibold mb-1">Add Artist Details</h2>
      <p className="text-slate-400 text-sm">Add artist details so users can find you faster</p>
      <%= form_with(model: @artist_detail, local: true, html: { class: "w-full space-y-4" } ) do |form| %>
        <% if @artist_detail.errors.any? %>
          <div class="errors">
            <h2><%= pluralize(@artist_detail.errors.count, 'error') %> prohibited this artist detail from being saved:</h2>
            <ul>
              <% @artist_detail.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field w-full space-y-2">
          <%= form.label :instagram_link %>
          <%= form.text_field :instagram_link , class: 'w-full rounded-md' %>
        </div>

        <div class="field w-full space-y-2">
          <%= form.label :pinterest_link %>
          <%= form.text_field :pinterest_link , class: 'w-full rounded-md' %>
        </div>

        <div class="field w-full space-y-2">
          <%= form.label :dribble_link %>
          <%= form.text_field :dribble_link , class: 'w-full rounded-md' %>
        </div>

        <div class="field w-full space-y-2">
          <%= form.label :behance_link %>
          <%= form.text_field :behance_link , class: 'w-full rounded-md' %>
        </div>

        <div class="field w-full space-y-2">
          <%= form.label :etsy_link %>
          <%= form.text_field :etsy_link , class: 'w-full rounded-md' %>
        </div>

        <div class="actions pt-3">
          <%= form.submit "Create Artist Details" , class: "w-full py-2 px-4 bg-yellow-300 rounded-md cursor-pointer"%>
        </div>
      <% end %>

    </div>
  </div>
</div>