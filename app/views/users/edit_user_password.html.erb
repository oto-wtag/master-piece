<div class="w-full flex">
  <div class="">
    <%= link_to I18n.t('profile.artist_profile.new.edit_profile'), edit_user_path(current_user), class: "hover:underline", role: "menuitem" %>
    <p class="underline">Change Password </p>
    <% if @user.role === "artist" %>
      <% if @user.artist_detail.present? %>
        <%= link_to I18n.t('profile.edit.edit_artist_profile'), edit_artist_detail_path(@user.artist_detail), class: "hover:underline" %>
      <% else %>
        <%= link_to I18n.t('profile.edit.create_artist_profile'), new_artist_detail_path, class: "hover:underline" %>
      <% end %>
    <% end %>
  </div>

  <div class=" flex-1 flex flex-col items-center justify-center">
    <div class=" bg-background shadow-md px-3 py-6 sm:p-8 border sm:max-w-sm w-full rounded-xl">

      <h2 class="text-2xl font-semibold mb-1">Update Password</h2>
      <p className="text-slate-400 text-sm">Update your password</p>

      <%= form_with(model: @user, url: update_password_user_path(@user), local: true, html: { class: "w-full space-y-4" }) do |form| %>
        <% if @user.errors.any? %>
          <div id="error_explanation" class="mb-5 font-light text-sm">
            <h2 class="text-red-600 mb-3">Faced <%= pluralize(@user.errors.count, "error") %>:</h2>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li class="text-rose-600"><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field w-full space-y-2">
          <%= form.label :current_password, "Current Password" %>
          <%= form.password_field :current_password, class: 'w-full rounded-md' %>
        </div>

        <div class="field w-full space-y-2">
          <%= form.label :password, "New Password" %>
          <%= form.password_field :password, class: 'w-full rounded-md' %>
        </div>

        <div class="field w-full space-y-2">
          <%= form.label :password_confirmation, "Confirm New Password" %>
          <%= form.password_field :password_confirmation, class: 'w-full rounded-md' %>
        </div>

        <div class="actions pt-3">
          <%= form.submit "Update Password", class: "w-full py-2 px-4 bg-yellow-300 rounded-md cursor-pointer"%>
        </div>
      <% end %>

    </div>
  </div>
</div>









