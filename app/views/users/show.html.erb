    <% if current_user.id == @user.id %>
        <div class="">
            <div class="flex items-center relative text-left dropdown">
                <button class="inline-flex justify-center w-full p-1 text-sm font-medium  bg-white rounded-full hover:bg-gray-100 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:bg-gray-50 active:text-gray-800" type="button" aria-haspopup="true" aria-expanded="true" aria-controls="headlessui-menu-items-117">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-ellipsis-vertical"><circle cx="12" cy="12" r="1"/><circle cx="12" cy="5" r="1"/><circle cx="12" cy="19" r="1"/></svg>
                </button>
                <div class="opacity-0 invisible dropdown-menu py-2 transition-all duration-300 transform origin-top-right -translate-y-2 scale-95">
                    <div class="absolute right-0 w-56 mt-2 origin-top-right bg-white border border-gray-200 divide-y rounded-md shadow-lg outline-none overflow-hidden" aria-labelledby="headlessui-menu-button-1" id="headlessui-menu-items-117" role="menu">
                        <%= link_to I18n.t('profile.show.dropdown.edit_profile'), edit_user_path(@user), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 whitespace-nowrap", role: "menuitem" %>
                        <%= button_to I18n.t('profile.show.dropdown.delete_profile'), @user, method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete your profile?" } }, class: "text-start w-full block px-4 py-2 text-sm text-rose-600 hover:bg-gray-50 whitespace-nowrap  hover:bg-rose-600 hover:text-white", role: "menuitem" %>
                    </div>
                </div>
            </div>
        </div>
    <% end %>

    <% if current_user.id != @user.id && @user.role == 'artist' %>
        <div>
            <%= button_to follow_user_path(@user), method: :post, class: "py-2 px-4 bg-yellow-300 rounded-md cursor-pointer hover:bg-yellow-400 cursor-pointer flex-shrink-0 flex-grow-0 h-full flex items-center" do %>
                <%= current_user.followed_users.include?(@user) ? I18n.t('profile.show.dropdown.unfollow') : I18n.t('profile.show.dropdown.follow') %>
            <% end %>
        </div>
    <% end %>
</div>

<section class="mt-16 grid grid-cols-4 gap-3">
    <% @artworks.each do |artwork| %>
    <div class="aspect-square">
        <%= link_to image_tag(artwork.image.present? ? artwork.image : image_path('no_artwork.png'), class: "w-full h-full object-cover object-center"), artwork_path(artwork) %>
    </div>
    <% end %>
</section>
