<div class="w-full grid grid-cols-1 md:grid-cols-2 gap-10">
    <div class="col-span-1">
        <div class="flex items-center gap-2">
            <div class="w-8 h-8 bg-black rounded-full"></div>
            <h6><%= @artwork.user.name %></h6>
        </div>
        
        <div class="mt-4 space-y-3">
            <%= image_tag @artwork.image.present? ? @artwork.image : image_path('broken_image.jpg'), class: "w-full" %>
            <div class="flex gap-2">
                <%= button_to like_artwork_path(@artwork), method: :post, class: "cursor-pointer flex-shrink-0 flex-grow-0 h-full flex items-center" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="relative lucide lucide-star transition-all <%= current_user.liked_artworks.include?(@artwork) ? 'fill-yellow-300' : 'hover:stroke-yellow-300' %>">
                        <path d="M11.525 2.295a.53.53 0 0 1 .95 0l2.31 4.679a2.123 2.123 0 0 0 1.595 1.16l5.166.756a.53.53 0 0 1 .294.904l-3.736 3.638a2.123 2.123 0 0 0-.611 1.878l.882 5.14a.53.53 0 0 1-.771.56l-4.618-2.428a2.122 2.122 0 0 0-1.973 0L6.396 21.01a.53.53 0 0 1-.77-.56l.881-5.139a2.122 2.122 0 0 0-.611-1.879L2.16 9.795a.53.53 0 0 1 .294-.906l5.165-.755a2.122 2.122 0 0 0 1.597-1.16z"/>
                    </svg>
                <% end %>
                <% liked_users_count = @artwork.likes.count %>
                <% other_likes_count = liked_users_count - (current_user.liked_artworks.include?(@artwork) ? 1 : 0) %>

                <p class="flex-grow-0 flex-shrink-0 font-light text-sm">
                <% if liked_users_count > 0 %>
                    <% if current_user.liked_artworks.include?(@artwork) %>
                        <%= I18n.t("comments.edit.like.you") %>
                        <% if other_likes_count > 0 %>
                            <%= I18n.t("comments.edit.like.other_likes_count", other_likes_count: other_likes_count)%>
                        <% end %>
                        <%= I18n.t("comments.edit.like.liked_this_artwork") %>
                    <% else %>
                        <%= I18n.t("comments.edit.like.liked_users_count", liked_users_count: liked_users_count)%>
                    <% end %>
                <% else %>
                    <%= I18n.t("comments.edit.like.be_first") %>
                <% end %>
            </p>
            </div>
            <div>
                <h6 class="font-semibold text-xl"><%= @artwork.title %></h6>
                <p class="font-light"><%= @artwork.description %></p>
            </div>
        </div>
    </div>
    <div class="col-span-1 w-full flex flex-col">  
        <div class="bg-background shadow-md px-3 py-6 sm:p-8 border sm:max-w-xl w-full rounded-xl">
            <h2 class="text-2xl font-semibold mb-1"><%= I18n.t("comments.edit.form.title") %></h2>
            <p className="text-slate-400 text-sm"><%= I18n.t("comments.edit.form.subtitle") %></p>

            <%= form_with(model: [@artwork, @comment], local: true, class: 'w-full space-y-4') do |form| %>
                <% if @comment.errors.any? %>
                    <div id="error_explanation">
                        <h2 class="text-red-600 mb-3">Faced <%= pluralize(@comment.errors.count, "error") %>:</h2>
                        <ul>
                            <% @comment.errors.full_messages.each do |message| %>
                                <li class="text-rose-600"><%= message %></li>
                            <% end %>
                        </ul>
                    </div>
                <% end %>

                <div class="field w-full space-y-2">
                    <%= form.label :content, I18n.t("comments.edit.form.content") %><br />
                    <%= form.text_area :content, class: "form-control", class: 'w-full rounded-md' %>
                </div>

                <div class="actions pt-3">
                    <%= form.submit I18n.t("comments.edit.form.button_update_comment"), class: "w-full py-2 px-4 bg-yellow-300 rounded-md cursor-pointer hover:bg-yellow-400" %>
                </div>
            <% end %>
        </div>
    </div>
</div>