<div class="w-full flex flex-col justify-center items-center">

  <div class="bg-background shadow-md px-3 py-6 sm:p-8 border sm:max-w-sm w-full rounded-xl">
    
    <h2 class="text-2xl font-semibold mb-1"><%= I18n.t('devise.signup.title') %></h2>
    <p className="text-slate-400 text-sm"><%= I18n.t('devise.signup.subtitle') %></p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "w-full space-y-4" }) do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field w-full space-y-2">
        <%= f.label I18n.t('devise.signup.name') %><br />
        <%= f.text_field :name, autofocus: true, class: 'w-full rounded-md' %>
      </div>

      <div class="field w-full space-y-2">
        <%= f.label I18n.t('devise.signup.email') %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full rounded-md' %>
      </div>

      <div class="field w-full space-y-2">
        <%= f.label I18n.t('devise.signup.role') %> <br />
        <%= f.select :role, options_for_select([['User', :user], ['Artist', :artist]]),  class: 'w-full rounded-md' %>
 
      </div>

      <div class="field w-full space-y-2">
        <%= f.label I18n.t('devise.signup.password') %>
        <% if @minimum_password_length %>
        <em>(<%= I18n.t('devise.signup.password_hint', length: @minimum_password_length) %>)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'w-full rounded-md' %>
      </div>

      <div class="field w-full space-y-2">
        <%= f.label I18n.t('devise.signup.password_confirmation') %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'w-full rounded-md' %>
      </div>

      <div class="actions pt-3">
        <%= f.submit I18n.t('devise.signup.sign_up'), class: "w-full py-2 px-4 bg-yellow-300 rounded-md cursor-pointer hover:bg-yellow-400"%>
      </div>
    <% end %>

    <p class="mt-3">
      <%= I18n.t('devise.signup.already_have_account') %> <span class="underline cursor-pointer"><%= render "devise/shared/links" %></span>
    </p>

  </div>

</div>