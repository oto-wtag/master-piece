<div class="w-full flex flex-col justify-center items-center">

  <div class="bg-background shadow-md px-3 py-6 sm:p-8 border sm:max-w-sm w-full rounded-xl">
    <h2 class="text-2xl font-semibold mb-1">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, html: { class: "w-full space-y-4 mb-7" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field w-full space-y-2">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full rounded-md' %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: "w-full py-2 px-4 bg-yellow-300 rounded-md cursor-pointer"%>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
