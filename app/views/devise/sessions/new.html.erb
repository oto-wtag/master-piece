<div class="w-full flex flex-col justify-center items-center">
  <div class="bg-background shadow-md px-3 py-6 sm:p-8 border sm:max-w-sm w-full rounded-xl">
    <h2 class="text-2xl font-semibold mb-1"><%= I18n.t('devise.login.title') %></h2>
    <p className="text-slate-400 text-sm"><%= I18n.t('devise.login.subtitle') %></p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "w-full space-y-4" }) do |f| %>
      <div class="field w-full space-y-2">
        <%= f.label I18n.t('devise.login.email') %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full rounded-md'  %>
      </div>

      <div class="field w-full space-y-2">
        <%= f.label I18n.t('devise.login.password') %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'w-full rounded-md'  %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field w-full space-y-2 flex items-center gap-3">
          <%= f.check_box :remember_me %>
          <%= f.label I18n.t('devise.login.remember_me') %>
        </div>
      <% end %>

      <div class="actions pt-3">
        <%= f.submit I18n.t('devise.login.log_in'), class: "w-full py-2 px-4 bg-yellow-300 rounded-md cursor-pointer" %>
      </div>
    <% end %>

    <p class="mt-3">
      <%=I18n.t('devise.login.dont_have_an_account') %> <span class="underline cursor-pointer"><%= render "devise/shared/links" %></span>
    </p>
  </div>
  
</div>
